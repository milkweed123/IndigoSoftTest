{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft.EntityFrameworkCore": "Warning",
        "System.Net.Http.HttpClient": "Warning"
      }
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "PostgreSQL": "Host=localhost;Port=5432;Database=trading_aggregator;Username=postgres;Password=postgres;Include Error Detail=true",
    "Redis": "localhost:6379,abortConnect=false"
  },
  "DataSources": {
    "Exchanges": [
      {
        "Exchange": "Binance",
        "Symbols": [ "BTCUSDT", "ETHUSDT" ]
      },
      {
        "Exchange": "Bybit",
        "Symbols": [ "BTCUSDT", "ETHUSDT" ]
      },
      {
        "Exchange": "OKX",
        "Symbols": [ "BTCUSDT", "ETHUSDT" ]
      }
    ]
  },
  "Aggregation": {
    "CandleIntervals": [ "OneMinute", "FiveMinutes", "OneHour" ],
    "FlushIntervalSeconds": 10,
    "TickBufferSize": 500,
    "InMemoryCandleRetentionMinutes": 120
  },
  "Alert": {
    "CooldownSeconds": 60,
    "MaxActiveRulesPerInstrument": 10
  },
  "ExchangeAdapters": {
    "BinanceWebSocket": {
      "Enabled": true
    },
    "BinanceRest": {
      "Enabled": false,
      "PollingIntervalSeconds": 5
    },
    "BybitWebSocket": {
      "Enabled": true
    },
    "BybitRest": {
      "Enabled": false,
      "PollingIntervalSeconds": 5
    },
    "OkxWebSocket": {
      "Enabled": true
    },
    "OkxRest": {
      "Enabled": false,
      "PollingIntervalSeconds": 5
    }
  },
  "DataRetention": {
    "RetentionDays": 30,
    "FuturePartitionDays": 7
  }
}
