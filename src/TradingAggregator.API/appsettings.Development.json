{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft.EntityFrameworkCore": "Warning",
        "System.Net.Http.HttpClient": "Warning",
        "TradingAggregator.Infrastructure.ExchangeAdapters": "Warning"
      }
    }
  },
  "ConnectionStrings": {
    "PostgreSQL": "Host=localhost;Port=5432;Database=trading_aggregator_dev;Username=postgres;Password=postgres;Include Error Detail=true",
    "Redis": "localhost:6379,abortConnect=false"
  },
  "Aggregation": {
    "CandleIntervals": [ "OneMinute", "FiveMinutes" ],
    "FlushIntervalSeconds": 5,
    "TickBufferSize": 100,
    "InMemoryCandleRetentionMinutes": 60
  },
  "Alert": {
    "CooldownSeconds": 30,
    "MaxActiveRulesPerInstrument": 20
  }
}
